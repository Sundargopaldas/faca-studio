# ========================================
# PACTMAKER STUDIO - VARIÁVEIS DE AMBIENTE
# ========================================

# ========================================
# CONFIGURAÇÕES BÁSICAS
# ========================================
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
CLIENT_URL=http://localhost:3001

# ========================================
# BANCO DE DADOS
# ========================================
# MongoDB
MONGODB_URI=mongodb://localhost:27017/pactmaker_studio
# PostgreSQL (alternativa)
# DATABASE_URL=postgresql://username:password@localhost:5432/pactmaker_studio

# ========================================
# AUTENTICAÇÃO
# ========================================
JWT_SECRET=sua_chave_secreta_jwt_aqui
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=sua_chave_refresh_token_aqui
REFRESH_TOKEN_EXPIRES_IN=30d

# ========================================
# AWS S3 (STORAGE)
# ========================================
AWS_ACCESS_KEY_ID=sua_access_key_aqui
AWS_SECRET_ACCESS_KEY=sua_secret_key_aqui
AWS_REGION=us-east-1
AWS_S3_BUCKET=pactmaker-studio-files
AWS_S3_BUCKET_REGION=us-east-1

# ========================================
# EMAIL (NODEMAILER)
# ========================================
# Gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=seu_email@gmail.com
EMAIL_PASS=sua_senha_de_app_aqui
EMAIL_FROM=PactMaker Studio <seu_email@gmail.com>

# ========================================
# SERVIÇOS EXTERNOS
# ========================================
# Stripe (Pagamentos)
STRIPE_SECRET_KEY=sk_test_sua_chave_stripe_aqui
STRIPE_PUBLISHABLE_KEY=pk_test_sua_chave_stripe_aqui

# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ========================================
# SEGURANÇA
# ========================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# LOGS
# ========================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ========================================
# CACHE
# ========================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# ========================================
# DESENVOLVIMENTO
# ========================================
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_CORS=true

